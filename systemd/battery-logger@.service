[Unit]
Description=Battery Logger Daemon (User Service)
After=graphical-session.target

[Service]
Type=simple
ExecStart=%h/.local/bin/battery-logger run
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

# Create necessary directories
ExecStartPre=/bin/mkdir -p %h/.local/state/battery-logger

[Install]
WantedBy=default.target
